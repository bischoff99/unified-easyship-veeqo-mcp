{
  "extends": ["./.eslintrc.json"],
  "rules": {
    // FastMCP server specific rules
    "fastmcp/tool-naming-convention": "error",
    "fastmcp/resource-template-validation": "error",
    "fastmcp/proper-error-handling": "error",
    "fastmcp/streaming-best-practices": "warn",
    "fastmcp/progress-reporting": "warn",

    // API integration specific rules
    "api-security/validate-inputs": "error",
    "api-security/sanitize-outputs": "error",
    "api-security/rate-limit-aware": "warn",
    "api-security/timeout-handling": "error",

    // Performance rules for MCP servers
    "perf/no-sync-operations": "error",
    "perf/prefer-streaming": "warn",
    "perf/memory-efficient-arrays": "warn",

    // Documentation requirements
    "jsdoc/require-description": "warn",
    "jsdoc/require-param-description": "warn",
    "jsdoc/require-returns-description": "warn",
    "jsdoc/check-tag-names": "error"
  },
  "overrides": [
    {
      "files": ["src/server/fastmcp-server.ts"],
      "rules": {
        "fastmcp/tool-naming-convention": "error",
        "fastmcp/proper-error-handling": "error",
        "max-lines": ["error", { "max": 1500, "skipComments": true, "skipBlankLines": true }]
      }
    },
    {
      "files": ["src/services/clients/*.ts"],
      "rules": {
        "api-security/validate-inputs": "error",
        "api-security/timeout-handling": "error",
        "perf/no-sync-operations": "error"
      }
    },
    {
      "files": ["src/services/integrations/*.ts"],
      "rules": {
        "api-security/rate-limit-aware": "error",
        "security/detect-possible-timing-attacks": "error"
      }
    }
  ]
}
