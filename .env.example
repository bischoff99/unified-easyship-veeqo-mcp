# Unified EasyPost-Veeqo MCP Server - Example Environment Variables
# Copy this file to .env and fill in values. Do NOT commit real secrets.

# --- Server ---
PORT=3000
HOST=localhost
NODE_ENV=development
LOG_LEVEL=info

# --- EasyPost ---
# Use 'mock' for development/testing to enable mock mode
EASYPOST_API_KEY=mock
EASYPOST_BASE_URL=https://api.easypost.com/v2
EASYPOST_TIMEOUT=30000

# --- Veeqo ---
# Use 'mock' for development/testing to enable mock mode
VEEQO_API_KEY=mock
VEEQO_BASE_URL=https://api.veeqo.com
VEEQO_TIMEOUT=30000

# Optional Veeqo endpoint overrides
# VEEQO_ENDPOINT_RATES=/rate_shopping/rates
# VEEQO_ENDPOINT_PURCHASE=/rate_shopping/labels

# --- AI Integrations (optional) ---
CLAUDE_CODE_API_KEY=
CLAUDE_CODE_ENDPOINT=https://api.claude.ai
CLAUDE_MODEL=claude-3-5-sonnet-20241022
HUGGING_FACE_HUB_TOKEN=

# --- Database (optional) ---
# DATABASE_TYPE can be: sqlite | postgresql | mysql
DATABASE_TYPE=sqlite
# DATABASE_URL is optional for sqlite; required for other types
# Examples:
#   sqlite: DATABASE_URL=file:./data/app.db
#   postgresql: DATABASE_URL=postgresql://user:pass@host:5432/db
#   mysql: DATABASE_URL=mysql://user:pass@host:3306/db
DATABASE_URL=
DATABASE_LOGGING=false

# --- Redis (optional) ---
REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# --- Security ---
# In production, set strong secrets
JWT_SECRET=
SESSION_SECRET=
# Comma-separated list
CORS_ORIGINS=http://localhost:3000
# Rate limiting (milliseconds window and max requests)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# --- Webhooks / Email (optional examples used in scripts) ---
WEBHOOK_URL=
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=
STAFF_EMAIL=

# --- Build / CI helpers (optional) ---
# Set to 'true' in CI to create a tarball during production build
# CREATE_ARCHIVE=false

# Unified EasyPost-Veeqo MCP Server Environment Configuration

# =============================================================================
# CORE SERVER CONFIGURATION
# =============================================================================

# Server configuration
NODE_ENV=development
PORT=3000
HOST=localhost
LOG_LEVEL=info

# =============================================================================
# API KEYS & AUTHENTICATION
# =============================================================================

# EasyPost API Configuration
# Get your API key from: https://www.easypost.com/account/api-keys
# Use "mock" for development/testing without making real API calls
EASYPOST_API_KEY=your_easypost_api_key_here
EASYPOST_BASE_URL=https://api.easypost.com/v2
EASYPOST_TIMEOUT=30000

# Veeqo API Configuration  
# Get your API key from: https://www.veeqo.com/api
# Use "mock" for development/testing without making real API calls
VEEQO_API_KEY=your_veeqo_api_key_here
VEEQO_BASE_URL=https://api.veeqo.com
VEEQO_TIMEOUT=30000

# =============================================================================
# AI INTEGRATION (OPTIONAL)
# =============================================================================

# Claude Code SDK Configuration
# Get your API key from: https://console.anthropic.com/
CLAUDE_CODE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_CODE_ENDPOINT=https://api.claude.ai

# Hugging Face Configuration
# Get your token from: https://huggingface.co/settings/tokens
HUGGING_FACE_HUB_TOKEN=your_hugging_face_token_here

# =============================================================================
# DATABASE CONFIGURATION (OPTIONAL)
# =============================================================================

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:./data/database.sqlite
DATABASE_LOGGING=false

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# =============================================================================

# Redis Configuration for caching
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT & Session Configuration
JWT_SECRET=your_jwt_secret_here_at_least_32_characters
SESSION_SECRET=your_session_secret_here_at_least_32_characters

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Railway Configuration (for Railway deployment)
RAILWAY_ENVIRONMENT=development

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# MOCK MODE CONFIGURATION
# =============================================================================

# Set API keys to "mock" for development without real API calls
# EASYPOST_API_KEY=mock
# VEEQO_API_KEY=mock

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_INTERVAL=60000

# Error Tracking
ENABLE_ERROR_TRACKING=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development-specific settings
ENABLE_DEBUG_LOGGING=false
ENABLE_API_MOCKING=false
MOCK_DELAY_MS=100