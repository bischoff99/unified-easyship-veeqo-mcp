# Environment Configuration for Unified EasyPost-Veeqo MCP Server
# Copy this file to .env and configure your values

# === API KEYS (REQUIRED) ===
# EasyPost API key for shipping operations
# Get from: https://www.easypost.com/account/api-keys
# Use test keys for development (EZTKTEST_xxx) and live keys for production (EZTK_xxx)
EASYPOST_API_KEY=your_easypost_api_key_here

# Veeqo API key for inventory management
# Get from: https://www.veeqo.com/api-keys
VEEQO_API_KEY=your_veeqo_api_key_here

# === SERVER CONFIGURATION ===
# Environment mode (development, production, test)
NODE_ENV=development

# Logging level (debug, info, warn, error, silent)
LOG_LEVEL=info

# Server port (if using HTTP transport)
PORT=3000

# === DEVELOPMENT SETTINGS ===
# Enable performance monitoring in development
ENABLE_PERFORMANCE_MONITORING=true

# Enable detailed API logging in development
ENABLE_API_LOGGING=true

# Mock API calls for testing (set to 'true' for offline development)
MOCK_API_CALLS=false

# === PRODUCTION SETTINGS ===
# Enable health checks endpoint
ENABLE_HEALTH_CHECKS=true

# Performance monitoring interval (milliseconds)
PERF_MONITOR_INTERVAL=60000

# API request timeout (milliseconds)
API_TIMEOUT=30000

# Maximum retries for failed API calls
MAX_API_RETRIES=3

# === CLAUDE AI INTEGRATION (OPTIONAL) ===
# Claude Code API key for AI-powered optimization
# Leave empty to use mock responses
CLAUDE_API_KEY=

# HuggingFace API key for additional AI features
# Leave empty to disable HuggingFace integration
HUGGINGFACE_API_KEY=

# === RATE LIMITING ===
# Requests per minute limit for EasyPost API
EASYPOST_RATE_LIMIT=100

# Requests per minute limit for Veeqo API
VEEQO_RATE_LIMIT=60

# === CACHING ===
# Cache TTL for shipping rates (seconds)
RATE_CACHE_TTL=300

# Cache TTL for inventory data (seconds)
INVENTORY_CACHE_TTL=60

# === MONITORING & ALERTS ===
# Memory usage warning threshold (MB)
MEMORY_WARNING_THRESHOLD=512

# Memory usage error threshold (MB)
MEMORY_ERROR_THRESHOLD=1024

# API response time warning threshold (ms)
API_WARNING_THRESHOLD=2000

# API response time error threshold (ms)
API_ERROR_THRESHOLD=5000

# === DATABASE (IF USED) ===
# Database URL (if using persistent storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/easypost_veeqo_mcp

# Redis URL (if using Redis for caching)
# REDIS_URL=redis://localhost:6379

# === THIRD-PARTY INTEGRATIONS ===
# Webhook URLs for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# === DEVELOPMENT TOOLS ===
# Enable debug mode for FastMCP
DEBUG_FASTMCP=false

# Enable TypeScript incremental compilation
TS_INCREMENTAL=true

# Enable source maps in production
SOURCE_MAPS=true

# === TEST CONFIGURATION ===
# Test database URL
# TEST_DATABASE_URL=postgresql://user:password@localhost:5432/test_db

# Test API keys (use test/mock keys)
TEST_EASYPOST_API_KEY=EZTKTEST_mock_test_key
TEST_VEEQO_API_KEY=mock_veeqo_test_key