{
  "permissions": {
    "allow": [
      "Bash(~/bin/cursor:*)",
      "Bash(~/bin/cursor --install-extension usernamehw.errorlens --force)",
      "Bash(~/bin/cursor --install-extension eamodio.gitlens --force)",
      "mcp__filesystem__read_text_file",
      "Bash(rm:*)",
      "Bash(npm run lint)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "Bash(curl:*)",
      "Bash(npm run build:*)",
      "Bash(gh pr:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm run lint:check:*)",
      "Bash(pnpm run lint:*)",
      "Bash(pnpm run:*)",
      "Bash(git add:*)",
      "Bash(git push:*)",
      "Bash(pnpm test:*)",
      "Bash(tree:*)",
      "Bash(node test-shipping-endpoint.js)",
      "mcp__fetch__fetch",
      "mcp__memory__*",
      "mcp__qwen-code__*",
      "Bash(node:*)",
      "Bash(sed:*)",
      "Bash(grep:*)",
      "Bash(git commit:*)",
      "Bash(gh workflow:*)",
      "Bash(gh issue:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(chmod:*)",
      "Bash(yes)",
      "Bash(gh run delete:*)",
      "Bash(do echo:*)",
      "Bash(done)"
    ],
    "deny": [],
    "ask": []
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ðŸ¤– Processing request in project: $(basename $(pwd))'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash(npm run build*)",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'âœ… Build completed successfully'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": "npm run lint:check && npm run type-check",
            "timeout": 30
          }
        ]
      }
    ]
  }
}