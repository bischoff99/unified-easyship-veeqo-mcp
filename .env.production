# Production Environment Configuration
# DO NOT COMMIT THIS FILE TO VERSION CONTROL

# --- Server ---
PORT=3000
HOST=0.0.0.0
NODE_ENV=production
LOG_LEVEL=warn

# --- EasyPost ---
EASYPOST_API_KEY=your_easypost_production_api_key_here
EASYPOST_BASE_URL=https://api.easypost.com/v2
EASYPOST_TIMEOUT=30000

# --- Veeqo ---
VEEQO_API_KEY=your_veeqo_production_api_key_here
VEEQO_BASE_URL=https://api.veeqo.com
VEEQO_TIMEOUT=30000

# --- AI Integrations (optional) ---
CLAUDE_CODE_API_KEY=
CLAUDE_CODE_ENDPOINT=https://api.claude.ai
CLAUDE_MODEL=claude-3-5-sonnet-20241022
HUGGING_FACE_HUB_TOKEN=

# --- Security ---
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
JWT_SECRET=${JWT_SECRET:-changeme-production-secret-32-characters-min}
SESSION_SECRET=${SESSION_SECRET:-changeme-session-secret-32-characters-min}

# --- Performance ---
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_INTERVAL=300000
ENABLE_ERROR_TRACKING=true
ENABLE_API_LOGGING=false

# --- Production Optimizations ---
MAX_WORKERS=4
GRACEFUL_SHUTDOWN_TIMEOUT=30000
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000
MEMORY_WARNING_THRESHOLD=400
MEMORY_ERROR_THRESHOLD=500

# --- Database (Production) ---
DATABASE_TYPE=postgresql
DATABASE_URL=${DATABASE_URL:-postgresql://user:pass@localhost:5432/easypost_veeqo_prod}
DATABASE_LOGGING=false

# --- Redis (Production) ---
REDIS_URL=${REDIS_URL:-redis://localhost:6379}
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD:-}
REDIS_DB=0

# --- Monitoring ---
SENTRY_DSN=${SENTRY_DSN:-}
DATADOG_API_KEY=${DATADOG_API_KEY:-}
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY:-}