#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# TypeScript compilation check
echo "ğŸ“ Checking TypeScript compilation..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript compilation failed. Please fix type errors before committing."
  exit 1
fi

# ESLint check
echo "ğŸ” Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint validation failed. Please fix linting errors before committing."
  exit 1
fi

# Test check (fast tests only)
echo "ğŸ§ª Running tests..."
npm test -- --run
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please ensure all tests pass before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"