#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# TypeScript compilation check
echo "📝 Checking TypeScript compilation..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ TypeScript compilation failed. Please fix type errors before committing."
  exit 1
fi

# ESLint check
echo "🔍 Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ ESLint validation failed. Please fix linting errors before committing."
  exit 1
fi

# Test check (fast tests only)
echo "🧪 Running tests..."
npm test -- --run
if [ $? -ne 0 ]; then
  echo "❌ Tests failed. Please ensure all tests pass before committing."
  exit 1
fi

echo "✅ All pre-commit checks passed!"