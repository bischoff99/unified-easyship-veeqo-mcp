{
  "mcpServers": {
    "unified-easyship-veeqo-mcp": {
      "command": "node",
      "args": ["dist/server.js"],
      "env": {
        "NODE_ENV": "development",
        "EASYPOST_API_KEY": "${EASYPOST_API_KEY}",
        "VEEQO_API_KEY": "${VEEQO_API_KEY}"
      },
      "cwd": "${workspaceFolder}",
      "description": "Unified EasyPost-Veeqo MCP Server for shipping and inventory management",
      "capabilities": {
        "tools": true,
        "prompts": true,
        "resources": true
      },
      "autoStart": true,
      "restartOnChange": true,
      "logLevel": "info"
    }
  },
  "globalSettings": {
    "enableAutoRefresh": true,
    "enableHealthChecks": true,
    "enablePerformanceMonitoring": true,
    "logLevel": "info",
    "maxRetries": 3,
    "retryDelay": 1000
  }
}
